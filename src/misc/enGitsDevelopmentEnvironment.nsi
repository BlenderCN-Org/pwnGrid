Function un.onUninstSuccess
  HideWindow
  MessageBox MB_ICONINFORMATION|MB_OK "$(^Name) was successfully removed from your computer."
FunctionEnd

Function un.onInit
  MessageBox MB_ICONQUESTION|MB_YESNO|MB_DEFBUTTON2 "Are you sure you want to completely remove $(^Name) and all of its components?" IDYES +2
  Abort
FunctionEnd

Section Uninstall
  ;UNINSTALL_LISTS
  !include "uninstall_examples.nsh"
  !include "uninstall_VTK.nsh"
  !include "uninstall_Qwt.nsh"
  !include "uninstall_QwtPlot3D.nsh"
  !include "uninstall_Plugins.nsh"

  Delete "$INSTDIR\${PRODUCT_NAME}.url"
  Delete "$INSTDIR\uninst.exe"
  Delete "$SMPROGRAMS\enGits Development Environment\Uninstall.lnk"
  Delete "$SMPROGRAMS\enGits Development Environment\Website.lnk"

  RMDir "C:\Qt\2009.03\qt\plugins\designer"
  RMDir "$SMPROGRAMS\enGits Development Environment"
  RMDir "$INSTDIR"

  DeleteRegKey ${PRODUCT_UNINST_ROOT_KEY} "${PRODUCT_UNINST_KEY}"
  DeleteRegKey HKLM "${PRODUCT_DIR_REGKEY}"
  SetAutoClose true

  ;CLEAN UP ENVIRONMENT
   ; delete variable
   DeleteRegValue ${env_hklm} VTKBINDIR
   DeleteRegValue ${env_hklm} VTKINCDIR
   DeleteRegValue ${env_hklm} VTKLIBDIR
   DeleteRegValue ${env_hklm} QWTINCDIR
   DeleteRegValue ${env_hklm} QWTLIBDIR
   DeleteRegValue ${env_hklm} QWTPLOT3DINCDIR
   DeleteRegValue ${env_hklm} QWTPLOT3DLIBDIR
   ; make sure windows knows about the change
   SendMessage ${HWND_BROADCAST} ${WM_WININICHANGE} 0 "STR:Environment" /TIMEOUT=5000

   ${un.EnvVarUpdate} $0 "PATH" "R" "HKLM" "$INSTDIR\${VTKBINDIR}"
   ${un.EnvVarUpdate} $0 "PATH" "R" "HKLM" "$INSTDIR\${QWTLIBDIR}"
   ${un.EnvVarUpdate} $0 "PATH" "R" "HKLM" "$INSTDIR\${QWTPLOT3DLIBDIR}"

SectionEnd
