<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="QT Language File"
	Version="8,00"
	>
	<Rules>
		<CustomBuildRule
			Name="Update and Release Language files"
			DisplayName="Build Language Files"
			CommandLine="call $(SolutionDir)qtvars.bat $(PlatformName)&#x0D;&#x0A;lupdate [QTProjectFile]&#x0D;&#x0A;lrelease -removeidentical [QTProjectFile]&#x0D;&#x0A;copy &quot;$(InputDir)$(InputName).qm&quot; $(IntDir)\$(InputName).qm&#x0D;&#x0A;"
			Outputs="$(IntDir)\$(InputName).qm"
			AdditionalDependencies="$(TargetName).pro"
			FileExtensions="*.ts"
			>
			<Properties>
				<StringProperty
					Name="QTProjectFile"
					DisplayName="QT Project File (.pro)"
					Switch="[value]"
					DefaultValue="$(TargetName).pro"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
